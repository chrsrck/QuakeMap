<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/map_fragment">

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:label="map_fragment">

        <action
            android:id="@+id/action_map_fragment_to_earthquake_list_fragment"
            app:destination="@id/earthquake_list_fragment" />
    </fragment>
        <!--tools:layout="@layout/activity_main" />-->

    <fragment
        android:id="@+id/earthquake_list_fragment"
        android:name="com.chrsrck.quakemap.EarthquakeListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_earthquake_list">
        <action
            android:id="@+id/action_earthquake_list_fragment_to_map_fragment"
            app:destination="@id/map_fragment" />
    </fragment>

</navigation>